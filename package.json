{
  "name": "template-reactnative-setup",
  "version": "1.8.6",
  "main": "index.js",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "deploy:android": "cd android/Fastlane && Fastlane deploy",
    "deploy:ios": "cd ios/Fastlane && Fastlane upload_testflight",
    "deploy:android_ios": "cd ios/Fastlane && Fastlane upload_testflight && cd ../../android/Fastlane && Fastlane deploy"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "axios": "^1.7.2",
    "expo": "~51.0.10",
    "expo-status-bar": "~1.12.1",
    "jest": "^29.7.0",
    "react": "18.2.0",
    "react-native": "0.74.1",
    "react-native-dotenv": "^3.4.11",
    "react-native-safe-area-context": "^4.10.4",
    "react-native-screens": "^3.31.1",
    "react-native-svg": "^15.3.0",
    "react-test-renderer": "^18.3.1",
    "styled-components": "^6.1.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^12.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.79",
    "@types/react-native": "^0.73.0",
    "@types/react-native-dotenv": "^0.2.2",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^9.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "react-native-svg-transformer": "^1.4.0",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "jest-expo",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  },
  "description": "React Native template for a quick start with TypeScript, React Navigation, styled-components, async-storage, dotenv, axios, fastlane",
  "keywords": [
    "expo",
    "template",
    "expo-template",
    "react-native",
    "react-native-template",
    "styled-components",
    "typescript",
    "react-navigation",
    "dotenv",
    "axios",
    "services",
    "deploy",
    "fastlane"
  ],
  "homepage": "https://github.com/Luizrebelatto/template-reactnative-setup",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luizrebelatto/template-reactnative-setup.git"
  },
  "bugs": {
    "email": "lbrebelatto@gmail.com",
    "url": "https://github.com/Luizrebelatto/template-reactnative-setup/issues"
  },
  "author": "Luiz Gabriel Rebelatto",
  "license": "MIT"
}
